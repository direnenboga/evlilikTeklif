<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Freelancer - Start Bootstrap Theme</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    @model QuestionModel
</head>
<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
        <div class="container">
            <div style="display:inline-flex">
                <a class="navbar-brand js-scroll-trigger" href="#page-top">LittlePonny   </a>

            </div>
            <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
        <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="/Home/logout">Çıkış yap</a></li>

                        @if (User.IsInRole("admin"))
                        {
        <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="/Home/users">Kullanıcılar </a></li>
} }

                    else
                    {
        <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="/Home/login">Giriş yap</a></li>
}


                </ul>
            </div>
        </div>
    </nav>
    <!-- Masthead-->
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">
            <!-- Masthead Avatar Image-->
            <img class="masthead-avatar mb-5" src="/images/11.png" alt="" style="width:inherit;" />
            <!-- Masthead Heading-->
            <h1 class="masthead-heading text-uppercase mb-0">Yarışmaya hazır mısın ?</h1>
            <!-- Icon Divider-->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
        </div>
    </header>
    <!-- Portfolio Section-->
    <div id="carouselExampleSlidesOnly" class="carousel slide p-2 m-auto w-75 " data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/images/1.jpeg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 " src="/images/2.jpeg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 " src="/images/3.jpeg" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 " src="/images/4.jpeg" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 " src="/images/5.jpeg" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 " src="/images/6.jpeg" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 " src="/images/7.jpeg" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 " src="/images/8.jpeg" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/9.jpg" alt="Third slide">
            </div>

        </div>
    </div>

    @if (User.Identity.IsAuthenticated) {
@foreach (var item in Model.questions)
{
@if (item.number == 1)
{


<div class="d-block" style="margin: auto; text-align:center;">
    <input type="hidden" class="answer" value="@item.answer" />
    <input type="hidden" class="QuestionNumber" value="@item.number" />
    <h4 class="questions">@item.number) @item.question</h4>
    @if (item.isAnswered == true)
    {
<input class=" input Useranswer ml-3" value="@item.answer" /> }
else
{
<input class=" input Useranswer ml-3" />}

    <button class="btn " type="button" onclick="answeredFunction(this)">Cevapla</button>
</div> }
else
{

@if (item.isAnswered)
{
<div class="d-block pt-2" style="margin: auto; text-align:center;">
    <input type="hidden" class="answer" value="@item.answer" />
    <input type="hidden" class="QuestionNumber" value="@item.number" />
    <h3 class="questions">@item.number) @item.question</h3>
    <input class=" input Useranswer ml-3" value="@item.answer" />
    <button class="btn " type="button" onclick="answeredFunction(this)">Cevapla</button>
</div> }
                        else
                        {
<div class="d-none pt-2" style="margin: auto; text-align:center;">
    <input type="hidden" class="answer" value="@item.answer" />
    <input type="hidden" class="QuestionNumber" value="@item.number" />
    <h3 class="questions">@item.number) @item.question</h3>
    <input class=" input Useranswer ml-3" />
    <button class="btn " type="button" onclick="answeredFunction(this)">Cevapla</button>
</div>}}}

    }




    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Contact form JS-->
    <script src="assets/mail/jqBootstrapValidation.js"></script>
    <script src="assets/mail/contact_me.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>

    <script>
        function answeredFunction(el) {
            var form = $(el).closest("div");
            var obj = { QuestionNumber: parseInt($(form).find(".QuestionNumber").val()), Answer: $(form).find(".Useranswer").val() };
            $.ajax({

                type: "POST",
                url: "/Home/Answerquestion",
                data: obj,
                dataType: "text",
                success: (function (data) {
                    console.log("Cevaplandı")
                    var number = obj.QuestionNumber + 1;
                    console.log(number);
                    var nform = $(".QuestionNumber[value='" + number + "']").closest("div");
                    console.log(nform);
                    $(nform).removeClass("d-none");




                }),
                error: (function () {
                    console.log("Yanlış Cevap Verdin Sevo")
                    alert('Yanlış Cevap')
                })



            })
        }



    </script>


</body>
</html>
